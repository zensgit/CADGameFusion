{
  "name": "cadgf-web-viewer-desktop",
  "version": "0.1.0",
  "description": "Desktop wrapper for VemCAD Web Viewer",
  "author": "VemCAD",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.vemcad.viewer",
    "productName": "VemCAD",
    "icon": "assets/icon",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "../web_viewer",
        "to": "web_viewer"
      }
    ]
  },
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3"
  }
}
